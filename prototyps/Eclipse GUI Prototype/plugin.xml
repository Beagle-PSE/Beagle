<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
         
    <menuContribution locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
      <command
            commandId="de.uka.ipd.sdq.beagle.startBeagle"
            id="de.uka.ipd.sdq.beagle.fileExplorerContextMenuEntry"
            label="Analyse with Beagle"
            style="push">
         <visibleWhen
               checkEnabled="false">
            <or>
            
            <with
                  variable="activeMenuSelection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <adapt
                        type="org.eclipse.core.resources.IResource">
                     <test
                           property="org.eclipse.core.resources.extension"
                           value="repository">
                     </test>
                  </adapt>
               </iterate>
            </with>
            
            
            <with
                  variable="activeMenuSelection">
               <iterate
                     ifEmpty="false"
                     operator="or">
                  <adapt
                        type="org.eclipse.core.resources.IResource">
                     <test
                           property="org.eclipse.core.resources.extension"
                           value="repository_diagram">
                     </test>
                  </adapt>
               </iterate>
            </with>
            </or>
         </visibleWhen>
      </command>
    </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.uka.ipd.sdq.beagle.handler.DemoBeagleContextMenuEntryHandler"
            id="de.uka.ipd.sdq.beagle.startBeagle"
            name="Run Beagle">
      </command>
   </extension>

</plugin>
